<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/modal_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="App Trac Nghiem"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/modal_text"
            android:layout_width="match_parent"
            android:layout_height="288dp"
            android:layout_marginTop="100dp"
            android:text="Ứng dụng Trắc Nghiệm là một giải pháp sáng tạo dành cho người dùng Android, được thiết kế để cách mạng hóa quy trình học tập và kiểm tra. Bằng cách tận dụng sức mạnh của Công nghệ, ứng dụng này mang đến khả năng giúp cho học sinh học tập kiểm tra trên điện thoại di động. Những bài kiểm tra củng cố kiến thức sẽ được trả về đáp án tự động cho sinh viên học sinh xem và chấm điểm ngay lập tức."
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/qr_code" />

        <Button
            android:id="@+id/button_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="Back" />



    </LinearLayout>

</ScrollView>
